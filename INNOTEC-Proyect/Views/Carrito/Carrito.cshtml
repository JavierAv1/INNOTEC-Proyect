@model List<ML.Compra>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Lista de Compras";
}

<h2>Lista de Compras</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre del Producto</th>
            <th>Descripción</th>
            <th>Cantidad</th>
            <th>Fecha de Compra</th>
            <th>Fecha de Vencimiento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdproductoNavigation?.Nombre</td>
                <td>@item.IdproductoNavigation?.DescripcionDelProducto</td>
                <td>@item.Cantidad</td>
                <td>@item.FechaDeCompra?.ToString("yyyy-MM-dd")</td>
                <td>@item.FechaVencimiento?.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("1") || User.IsInRole("4"))
{
    <div>
        <!-- Opciones para Administrador o Gerente, tal vez botones de acción como editar o eliminar -->
        <button onclick="location.href='@Url.Action("Edit", "Compra")'">Editar</button>
        <button onclick="location.href='@Url.Action("Delete", "Compra")'">Eliminar</button>
    </div>
}
